<h1><%= @course.title %></h1>

<% @lectures.where(order: "000").each do |free_lecture| %>
  <strong><%= free_lecture.title %></strong><br>
<% end %><br>

<% @courses_softwares.each do |courses_software| %>
  <h3><%= courses_software.software.title %><br></h3>
  <% lectures = Lecture.where(course: @course).where(software: courses_software.software).where.not(order: "000") %>
    <% lectures.each do |lecture| %>
      <strong>- <%= lecture.title %></strong>
      <i>
        <% UsersLecture.where(lecture: lecture).where(user: current_user).each do |users_lecture| %>
          - <em><%= users_lecture.note %></em>
        <% end %>
      </i><br>
    <% end %>
<% end %>

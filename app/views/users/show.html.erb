<!-- =============== ROW & CONTAINER =============== -->
<div class="container">
  <div class="row">
    <!-- =============== VOLET GAUCHE =============== -->
    <div class="col-sm-8">
    <!-- ===== RECAP COURS ===== -->
    <div class= "block">
      <%= image_tag "puce-v5.png", class: "puce" %>
      <h4>Récapitulatif des incriptions aux cours</h4>
      <% @users_courses.each do |user_course| %>
        <p>
          <%= user_course.course.title %> - <%= user_course.timeslot.title %> -
          <% if user_course.confirmed %>
            <span class= "confirmed">Le cours est bien confirmé.</span>
          <% else %>
            <span class="not-confirmed">Je vous contacterai pour confirmer.</span>
          <% end %>
        </p>
      <% end %>
    </div>
    <!-- ===== RECAP STAGES ===== -->
    <div class= "block">
      <%= image_tag "puce-v5.png", class: "puce" %>
      <h4>Récapitulatif des incriptions aux stages</h4>
      <% @users_stages.each do |user_stage| %>
        <p>
          <%= user_stage.stage.stagetype.title %> - <%= user_stage.stage.timeslot %> -
          <% if user_stage.confirmed %>
            <span class= "confirmed">Le stage est bien confirmé.</span>
          <% else %>
            <span class="not-confirmed">Je vous contacterai pour confirmer.</span>
          <% end %>
        </p>
      <% end %>
    </div>
    <!-- ===== RETOUR AU FORMULAIRE ===== -->
    <%= link_to edit_user_path(current_user) do %>
      <div class= "inscription">
        Revenir au formulaire
      </div>
    <% end %>
    <!-- ===== RETOUR À L'ACCUEIL ===== -->
    <%= link_to root_path do %>
      <div class= "inscription">
        Revenir à l'accueil
      </div>
    <% end %>
    <!-- =============== CLOSE VOLET GAUCHE =============== -->
    </div>
    <!-- =============== VOLET DROIT =============== -->
    <div class="col-sm-4">
    <div class= "block-margin hidden-xs hidden-sm"></div>
      <!-- ===== PLANNING COURS ===== -->
      <div class= "block">
        <%= image_tag "puce-v5.png", class: "puce" %>
        <h4><%= @planning.title %></h4>
        <p><%= @planning.description.gsub("\n", "<br/>").html_safe %></p>
      </div>
      <!-- ===== TARIF COURS ===== -->
      <div class= "block">
        <%= image_tag "puce-v5.png", class: "puce" %>
        <h4><%= @tarifs1.title %></h4>
        <p><%= @tarifs1.description.gsub("\n", "<br/>").html_safe %></p>
        <%= image_tag @tarifs1.picture, class: "full" %><br><br>
        <p><%= @tarifs2.description.gsub("\n", "<br/>").html_safe %></p>
        <%= image_tag @tarifs2.picture, class: "full" %><br><br>
      </div>
      <!-- ===== INFOS STAGES ===== -->
      <div class= "block">
        <%= image_tag "puce-v5.png", class: "puce" %>
        <h4><%= @infos.title %></h4>
        <p><%= @infos.description.gsub("\n", "<br/>").html_safe %></p>
      </div>
<!-- =============== CLOSE ROW & CONTAINER =============== -->
    </div>
  </div>
</div>
